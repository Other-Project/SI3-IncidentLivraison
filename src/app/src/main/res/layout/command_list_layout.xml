<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titlePending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titlePendingDeliveries"
        android:textSize="20sp"
        android:layout_marginTop="100sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/PendingList"
        android:name="edu.ihm.td1.livraison.NextDeliveryFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlePending"
     />

    <TextView
        android:id="@+id/titleFinished"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleFinishedDeliveries"
        app:layout_constraintTop_toBottomOf="@+id/PendingList"
        android:textSize="20sp"
        android:layout_marginTop="20sp" />

    <ListView
        android:id="@+id/FinishedList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleFinished"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

