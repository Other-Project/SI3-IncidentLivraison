<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:columnCount="3">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/address"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/andika_new_basic_bold"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/andika_new_basic_bold"
            android:textAlignment="textStart" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/delivery_issue"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:contentDescription="@string/delivery_issue"
        android:scaleType="fitCenter"
        android:src="@drawable/communication"
        android:layout_marginRight="10dp"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/delivery_done"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="#0000"
        android:contentDescription="@string/delivery_done"
        android:textAlignment="center"
        android:scaleType="fitCenter"
        android:src="@drawable/check" />

</LinearLayout>